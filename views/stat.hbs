<h2>Зарегистрировано гостей: {{totalRegistered}}</h2>

<table class="table table-striped table-responsive stat">
    <thead>
        <tr>
            <th>Фамилия Имя</th>
            <th>Компания</th>
            <th>Категория</th>
            <th>Регистрация</th>
        </tr>
    </thead>
    <tbody>
        {{#each guests}}
        <tr id="{{_id}}">
            <td>{{{fio}}}</td>
            <td>{{{company}}}</td>
            <td>{{{category}}}</td>
            <td>
                {{#if register_date}}
                    Зарегистрирован
                {{else}}
                    <a class="btn btn-default" href="/guest/{{_id}}" role="button">Регистрация</a>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="servicelinks">
    <a href="/register">Регистрация гостя не из списка</a>
</div>

<div class="servicelinks">
    <a href="/">На главную</a>
</div>
